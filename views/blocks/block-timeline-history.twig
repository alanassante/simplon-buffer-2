{#
/**
 * Block Name: Timeline History
 */
#}
<section class="block-timeline-history{{ block.className }} {% if fields.block_space != 'none' %} section-{{ fields.block_space }} {% endif %}{% if fields.space_bottom == false %} pb-0 {% endif %}{% if fields.space_top == false %} pt-0 {% endif %}">
	<div class="container">
		{% if fields.title %}
			<h2 class="wrapper-title">{{fields.title}}</h2>
		{% endif %}
		{% if fields.timeline|length > 0 %}
			<div class="wrapper-timeline">
				{% for item in fields.timeline %}
					<div data-index="{{loop.index}}" class="wrapper-date{% if loop.first %} active{% endif %} ">
						{% if item.date %}
							<p class="date h3">{{item.date}}</p>
						{% endif %}
					</div>
				{% endfor %}
				<div class="line"></div>
				<div class="dashed-line"></div>
			</div>
		{% endif %}
		{% if fields.timeline|length > 0 %}
			<div class="wrapper-content">
				<div class="bloc-buttons swiper-nav">
					<div class="slider-btn prev">prev</div>
					<div class="slider-btn next">next</div>
				</div>

				<div class="wrapper-cards">
					{% for item in fields.timeline %}
						<div data-index="{{loop.index}}" class="card{% if loop.first %} active{% endif %} ">
							{% if item.date %}
								<p class="date h3">{{item.date}}</p>
							{% endif %}
							{% if item.text %}
								{{item.text}}
							{% endif %}
						</div>
					{% endfor %}
				</div>

			</div>
		{% endif %}
	</div>
</section>
